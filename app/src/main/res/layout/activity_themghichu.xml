<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/checked"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_circle_24"
        app:tint="@android:color/holo_green_light" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="43dp"
        android:layout_height="31dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/checked"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_reply_24"
        app:tint="@android:color/black" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:scaleX="-1"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_reply_24"
        app:tint="@android:color/black" />

    <ImageView
        android:id="@+id/clean"
        android:layout_width="43dp"
        android:layout_height="32dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/right"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_cleaning_services_24"
        app:tint="@android:color/black" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="42dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/clean"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_more_vert_24"
        app:tint="@android:color/black" />

    <EditText

        android:id="@+id/note"
        android:layout_width="368dp"
        android:layout_height="329dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/vien"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tieude" />

    <ImageView
        android:id="@+id/bold"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:tint="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note"
        app:srcCompat="@drawable/ic_baseline_format_bold_24" />

    <ImageView
        android:id="@+id/italic"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:tint="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/bold"
        app:layout_constraintTop_toBottomOf="@+id/note"
        app:srcCompat="@drawable/ic_baseline_format_italic_24" />

    <ImageView
        android:id="@+id/underlined"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:tint="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/italic"
        app:layout_constraintTop_toBottomOf="@+id/note"
        app:srcCompat="@drawable/ic_baseline_format_underlined_24" />

    <ImageView
        android:id="@+id/color_text"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note"
        app:srcCompat="@drawable/ic_baseline_format_color_text_24"
        app:tint="@android:color/black" />

    <ImageView
        android:id="@+id/align_left"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/underlined"
        app:layout_constraintTop_toBottomOf="@+id/note"
        app:srcCompat="@drawable/ic_baseline_format_align_left_24" />

    <ImageView
        android:id="@+id/align_center"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/align_left"
        app:layout_constraintTop_toBottomOf="@+id/note"
        app:srcCompat="@drawable/ic_baseline_format_align_center_24" />

    <ImageView
        android:id="@+id/align_right"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/align_center"
        app:layout_constraintTop_toBottomOf="@+id/note"
        app:srcCompat="@drawable/ic_baseline_format_align_right_24" />

    <EditText
        android:id="@+id/tieude"
        android:layout_width="364dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Tiêu đề"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/right" />

</androidx.constraintlayout.widget.ConstraintLayout>